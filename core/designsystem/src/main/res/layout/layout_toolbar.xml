<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px56">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.well.designsystem.view.CustomTextView
        android:id="@+id/tvTitleSelect"
        style="@style/T16H24M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/px56"
        android:layout_marginTop="@dimen/px16"
        android:layout_marginEnd="@dimen/px66"
        android:drawablePadding="@dimen/px4"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_arrow_down_ink5"
        android:textColor="@color/ink_5"/>

    <View
        android:id="@+id/divider_toolbar_view"
        style="@style/Divider1PxMercuryHorizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true" />
</RelativeLayout>