<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@drawable/shape_dialog_controller"
    app:layout_constraintTop_toBottomOf="@+id/layout_choose_number">

    <com.well.designsystem.view.button.WellButton
        android:id="@+id/tvPositive"
        style="@style/ButtonPlain.SizeM.Style2"
        tools:text="Save"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/px8"
        android:layout_marginBottom="@dimen/px8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvNegative"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.well.designsystem.view.button.WellButton
        android:id="@+id/tvNegative"
        style="@style/ButtonPlain.SizeM.Style1"
        tools:text="Cancel"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/px8"
        android:layout_marginBottom="@dimen/px8"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvPositive"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvPositive"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line3"
        style="@style/Divider1PxMercuryVertical"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvNegative"
        app:layout_constraintRight_toLeftOf="@+id/tvPositive"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line2"
        style="@style/Divider1PxMercuryHorizontal"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>